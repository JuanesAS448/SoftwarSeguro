rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para la colección de usuarios
    match /usuarios/{dni} {
      // Permitir lectura si el usuario está autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura si el usuario está autenticado y los datos son válidos
      allow write: if request.auth != null
        && validarDatosUsuario(request.resource.data);
    }
    
    // Función para validar los datos del usuario
    function validarDatosUsuario(data) {
      return data.keys().hasAll(['dni', 'nombre', 'apellidos', 'email'])
        && data.dni is string
        && data.dni.matches('^[0-9]+$')
        && data.nombre is string
        && data.nombre.size() > 0
        && data.apellidos is string
        && data.apellidos.size() > 0
        && data.email is string
        && data.email.matches('^[^@]+@[^@]+\\.[^@]+$');
    }
  }
} 